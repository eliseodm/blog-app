<%- include("./partials/header") %> 

<div class="ui main text container segment">
    <div class="ui huge header">Editar Blog</div>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Titulo</label>
            <input type="text" name="blog[title]" value="<%= blog.title %> ">
        </div>
        <div class="field">
            <label>Imagen</label>
            <input type="text" name="blog[image]" value="<%= blog.image %> ">
        </div>
        <div class="field">
            <label>Contenido del post</label>
            <textarea name="blog[body]"><%= blog.body %> </textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
</div>

<%- include("./partials/footer") %> 